{# templates/profile/add_mascota.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Agregar Mascota{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Agregar Mascota</h1>
    
    {{ form_start(form) }}
    <div class="mb-4">
        {{ form_row(form.nombre) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.edad) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.especie) }}
    </div>
    
    <button type="submit" class="bg-blue-500 text-white rounded px-4 py-2">Agregar Mascota</button>
    {{ form_end(form) }}
</div>
{% endblock %}
