{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 p-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Register</h1>

    {{ form_start(registrationForm) }}

    <div class="mb-4">
        {{ form_label(registrationForm.nombre, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.nombre, {'attr': {'class': 'block w-full shadow-sm border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 rounded-md p-3 mt-1'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(registrationForm.edad, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.edad, {'attr': {'class': 'block w-full shadow-sm border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 rounded-md p-3 mt-1'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(registrationForm.direccion, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.direccion, {'attr': {'class': 'block w-full shadow-sm border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 rounded-md p-3 mt-1'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(registrationForm.mail, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.mail, {'attr': {'class': 'block w-full shadow-sm border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 rounded-md p-3 mt-1'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(registrationForm.telefono, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.telefono, {'attr': {'class': 'block w-full shadow-sm border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 rounded-md p-3 mt-1'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'block w-full shadow-sm border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 rounded-md p-3 mt-1'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'block w-full shadow-sm border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 rounded-md p-3 mt-1'}}) }}
    </div>

    <div>
        <button type="submit" class="w-full bg-indigo-600 text-white font-semibold py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
            Register
        </button>
    </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
