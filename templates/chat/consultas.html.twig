{% extends 'base.html.twig' %}

{% block title %}Consultas Online{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-2xl font-bold mb-6">Consultas Online</h1>

        <div class="bg-white shadow rounded-lg p-4">
            {% if clientes is empty %}
                <p class="text-gray-500">No hay clientes disponibles.</p>
            {% else %}
                <ul class="space-y-3">
                    {% for cliente in clientes %}
                        <li class="flex items-center justify-between border-b pb-2">
                            <span class="text-lg">{{ cliente.nombre }}</span>
                            <a href="{{ path('app_chat_vet', { id: cliente.id }) }}"
                               class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-1 rounded text-sm">
                                Iniciar Consulta
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
