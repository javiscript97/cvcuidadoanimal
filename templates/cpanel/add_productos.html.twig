{% extends 'base_cpanel.html.twig' %}

{% block title %}Agregar Producto{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Agregar Producto</h1>
    
    {{ form_start(form) }}
    <div class="mb-4">
        {{ form_row(form.nombre) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.descripcion) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.stock) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.precio) }}
    </div>  
    <div class="mb-4">
        {{ form_row(form.caducidad) }}
    </div>  
    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white rounded px-4 py-2">Agregar Producto</button>
    {{ form_end(form) }}
</div>
{% endblock %}