{% extends 'base_cpanel.html.twig' %}

{% block title %}Agregar Cliente{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Agregar Cliente</h1>
    
    {{ form_start(form) }}
    <div class="mb-4">
        {{ form_row(form.nombre) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.edad) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.direccion) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.mail) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.telefono) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.rol) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.plainPassword.first) }}
    </div>
    <div class="mb-4">
        {{ form_row(form.plainPassword.second) }}
    </div>  
    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white rounded px-4 py-2">Agregar Cliente</button>
    {{ form_end(form) }}
</div>
{% endblock %}