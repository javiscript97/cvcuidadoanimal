{% extends 'base_cpanel.html.twig' %}

{% block title %}Clinica Veterinaria!{% endblock %}

{% block body %}
<section class="px-24 py-5">
        <h1 class="shadtext text-3xl font-bold invisible sm:invisible md:visible pt-5 py-5">Farmacia</h1>
        <div class="max-w-2xl mx-auto mb-6">
            <input
                type="text"
                id="search"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg"
                placeholder="Buscar producto"
                >
        </div>
        <div class="overflow-x-auto  pb-24">
            <table  class="min-w-full bg-white border border-gray-300" id="pharmacyTab">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="text-left py-3 px-4 font-semibold text-gray-600">ID</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-600">Nombre</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-600">Descripción</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-600">Stock</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-600">Precio (€)</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-600">Caducidad</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-600">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    {% for producto in productos %}
                    <tr class="border-t">
                        <td class="py-3 px-4">{{ producto.id }}</td>
                        <td class="py-3 px-4">{{ producto.nombre }}</td>
                        <td class="py-3 px-4">{{ producto.descripcion }}</td>
                        <td class="py-3 px-4">{{ producto.stock }}</td>
                        <td class="py-3 px-4">{{ producto.precio }}</td>
                        <td class="py-3 px-4">{{ producto.caducidad|date('Y-m-d') }}</td>
                        <td class="border border-gray-200 px-4 py-2">
                            <a href="{{ path('app_cpanel_producto_edit', { id: producto.id }) }}" class="text-yellow-500">Modificar</a>
                            <a href="{{ path('app_cpanel_producto_delete', { id: producto.id }) }}" class="text-red-500 ml-4" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');">Eliminar</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-3">No hay productos disponibles</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
</section>
<script src="{{ asset('js/searchfilter.js') }}"></script>
{% endblock %}